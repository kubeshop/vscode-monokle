{
  "name": "monokle",
  "author": "Kubeshop",
  "displayName": "Monokle",
  "description": "Monokle Visual Studio Code extension for validating Kubernetes resources.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:kubeshop/vscode-monokle.git"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onFileSystem:file"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "monokle.validate",
        "category": "Monokle",
        "title": "Validate"
      },
      {
        "command": "monokle.showPanel",
        "category": "Monokle",
        "title": "Show panel"
      },
      {
        "command": "monokle.showConfiguration",
        "category": "Monokle",
        "title": "Show configuration"
      },
      {
        "command": "monokle.bootstrapConfiguration",
        "category": "Monokle",
        "title": "Bootstrap configuration"
      }
    ],
    "configuration": {
      "title": "Monokle",
      "properties": {
        "monokle.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Whenever extension is enabled."
        },
        "monokle.configurationPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to monokle.validation.yaml configuration file. If not set it will be searched in the workspace root."
        }
      }
    }
  },
  "extensionDependencies": [
    "ms-sarifvscode.sarif-viewer"
  ],
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:cc": "c8 node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "c8": "^8.0.0",
    "esbuild": "^0.18.11",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@monokle/validation": "^0.23.7",
    "uuid": "^9.0.0"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "out/test/**"
    ],
    "include": [
      "out/**"
    ]
  }
}
